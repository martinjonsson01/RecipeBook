<div class="container-fluid mb-3 shadow-sm border border-light">
    <div class="row justify-content-evenly align-items-center">
        <div class="col-sm-2">
            <div class="d-flex align-items-center" style="height: 3rem">
                <img class="img-fluid h-100" src="icon-512.png" alt="RecipeBook logo"/>
                <h4 class="text-center text-black-50 ms-1">RecipeBook</h4>
            </div>
        </div>
        <div class="col-sm-auto">
            <h3>@PageTitle</h3>
        </div>
        <div class="col-sm-2"></div>
    </div>
</div>

@code {
    #nullable enable

    [Parameter]
    public string PageTitle { get; set; } = string.Empty;

}