@using RecipeBook.Core.Domain.Recipes

<div class="container">
    <div class="row mb-4">
        <img class="mb-2" src="@Recipe.ImagePath" alt="@Recipe.Name"/>
        <h1 class="display-4">@Recipe.Name</h1>
    </div>
    <div class="row">
        <div class="col-sm-8">
            <StepsView Recipe="@Recipe"/>
        </div>
        <div class="col-sm-4">
            <div class="row">
                <div class="col-sm">
                    <IngredientsView Recipe="@Recipe"/>
                </div>
            </div>
        </div>
    </div>
</div>

@code {
#nullable enable

    [Parameter]
    public Recipe Recipe { get; set; } = null!;

}